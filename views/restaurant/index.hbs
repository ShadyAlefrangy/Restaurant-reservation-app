{{> header}}
<main>
    <form action="/" method="get" class="centered">
        <div class="form-control">
            <label for="filter">Choose Filter</label>
            <select name="filter" id="filter">
                <option value="">--Please choose Filter--</option>
                <option value="category">Category</option>
                <option value="city">City</option>
            </select>
        </div>
        <div class="centered">
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            <button type="submit" class="btn">Filter</button>
        </div>
    </form>
    {{#if hasRestaurants }}
    <div class="grid">
        {{#each restaurants}}
        <article class="card product-item">
            <header class="card__header">
                <h1 class="product__title">{{ name }}</h1>
            </header>
            <div class="card__image">
                <img src="{{ img }}"
                    alt="{{ name }}">
            </div>
            <div class="card__content">
                <h2 class="product__price">{{ city }}</h2>
                <p class="product__description">{{ category }}</p>
            </div>
            <div class="card__actions">
                <a href="/restaurants/{{ _id }}" class="btn">Details</a>
            </div>
        </article>
        {{/each}}
    </div>
    {{ else }}
    <h1>No Restaurants Found!</h1>
    {{/if}}
</main>
{{> footer}}